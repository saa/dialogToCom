#!/bin/bash

DIALOG=${DIALOG=dialog}

tempfile=`mktemp 2>/dev/null` || tempfile=/tmp/test$$
trap "rm -f $tempfile" 0 1 2 5 15

InfoDialog() {
    $DIALOG --msgbox "$1" 5 70
}

SetSerial() {
    stty 9600 cs8 cstopb -parenb -F /dev/ttyS0
}

Floppy() {
    mount /dev/fd0 /mnt/floppy

    local list=""
    local i=1
    for file in *; do
	list="$list $file $i"
	((i++))
    done

    $DIALOG --title "Select file" --menu "" 20 51 5 \
    ${list} 2> ${tempfile}

    local namefile=`cat $tempfile`

    InfoDialog "The file $namefile was sent"

    umount /mnt/floppy
    
    InfoDialog "The floppy can be removed"
}

Flash() {

    mount /dev/sdb /mnt/fash

    local list=""
    local i=1
    for file in *; do
	list="$list $file $i"
	((i++))
    done

    $DIALOG --title "Select file" --menu "" 20 51 5 \
    ${list} 2> ${tempfile}

    local namefile=`cat $tempfile`

    InfoDialog "The file $namefile was sent"

    umount /mnt/flash

    InfoDialog "The flash can be removed"
}

Dialog() {
    $DIALOG --title "Select the device" --menu "" 20 51 4 \
    "1" "Floppy" \
    "2" "Flash" 2> $tempfile

    local retval=$?

    local choise=`cat $tempfile`

    case $retval in
	0)
	    if [ $choise = "1" ]; then
		Floppy
		Dialog
	    else
		Flash
		Dialog
	    fi
	    Dialog
	    ;;
	1)
	    Dialog
	    ;;
	255)
	    #Dialog
	    exit
	    ;;
    esac
}

#SetSerial
Dialog